-#  This file is app/views/movies/index.html.haml
%h1 All Movies
/need the 1 just to give it an arbitrary value
= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    /third param is booleam if rating is included in the hash or not, checked all initially
    = check_box_tag "ratings[#{rating}]", 1, if @ratings; @ratings.include?(rating) else true end
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th#title_header{:class => ("hilite" if @sort == 'title')}= link_to 'Movie Title', movies_path(:sort => 'title')
      %th Rating
      %th
      %th#release_date_header{:class => ("hilite" if @sort == 'release_date')}=link_to 'Release Date', movies_path(:sort => 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
